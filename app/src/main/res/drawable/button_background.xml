<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Sin color de fondo, solo el borde -->
    <solid android:color="@android:color/transparent"/> <!-- Fondo transparente -->

    <!-- Borde del botón -->
    <stroke
        android:color="@color/black"
    android:width="2dp"/> <!-- Grosor del borde -->

    <!-- Opcional: Redondear las esquinas -->
    <corners android:radius="8dp"/> <!-- Ajusta el radio según lo desees -->

    <!-- Opcional: Sombra para dar un efecto de elevación -->
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp"/>
</shape>